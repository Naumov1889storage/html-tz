.card {
  background-color: darken(#f9f9f9, 3%)
  border-radius 16px
  overflow hidden
}

.tab-title {
  display: flex;
  justify-content center
  height: 32px

  &__item {
    height: 100%
  }

  &__link {
    display: flex;
    justify-content center
    align-items center
    height: 100%
    padding: 2px 8px
    font-family: 'MuseoSansCyrl_700'
    font-size: 12px
    color: #000000
    border-radius 10px 10px 0 0

    .icon {
       margin-right: 3px
    }

    &[aria-selected=true] {
      background-color: #1f2029;
      color: #ffffff

      .icon {
        filter: brightness(0) invert(1);
      }
    }
  }
}


.tab-content {
  &__item {
    height: 192px
    background-color: #ffffff
    border-radius 16px
    overflow hidden
  }

  &__grid {
    display: flex;
  }

  &__right {
    display: flex;
    flex-direction column
    justify-content space-between
    padding: 16px 16px 20px 16px
  }

  &-text {

    &__title {
      font-family: 'MuseoSansCyrl_700'
      font-size: 15px
      line-height: 20px
    }

    &__subtitle {
      display: flex;
      justify-content space-between
      margin-top: 14px
      max-width: 180px;
      font-size: 15px

      sup {
        font-size: 10px
      }
    }
  }
}
