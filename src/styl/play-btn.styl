.play-btn {
  position: relative;
  width: 40px
  height: 40px
}

.play-btn__circle-1 {
  position: absolute;
  z-index 5
  width: 40px;
  height: 40px;

  background: #d9a25f;
  border-radius: 50%;
  text-transform: uppercase;
  -webkit-box-shadow: 0 1rem 1.8rem rgba(217, 162, 95, 0.5);
  box-shadow: 0 1rem 1.8rem rgba(217, 162, 95, 0.5);
  position: relative;


  background-color: #dc0037;

  cursor: pointer;

  &:before {
    content ''
    position: absolute;
    left: 55%
    top: 50%
    transform translate(-50%, -50%)
    width: 12px
    height: 12px
    background-image: url("../img/icon-play-triangle.svg")
    background-repeat: no-repeat
  }
}

.play-btn__circle-2 {
  content: "";
  width: 40px;
  height: 40px;
  position: absolute;
  z-index 4
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  //border: 0.1rem solid #d9a25f;
  border-radius: 50%;
  -webkit-animation: 1.5s pulse infinite;
  animation: 1.5s pulse infinite;

  background-color: lighten(#dc0037, 20%)
}

.play-btn__circle-3 {
  content: "";
  width: 40px;
  height: 40px;
  position: absolute;
  z-index 3
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  //border: 0.1rem solid #d9a25f;
  border-radius: 50%;

  background-color: lighten(#dc0037, 40%)

  -webkit-animation: 1.5s pulse2 infinite;
  animation: 1.5s pulse2 infinite;
}

@keyframes pulse {
  0% {
    -webkit-transform: translate(-50%, -50%) scale(1);
    transform: translate(-50%, -50%) scale(1);
    opacity: 1
  }
  100% {
    -webkit-transform: translate(-50%, -50%) scale(1.3);
    transform: translate(-50%, -50%) scale(1.3);
    opacity: 0
  }
}

@keyframes pulse2 {
  0% {
    -webkit-transform: translate(-50%, -50%) scale(1);
    transform: translate(-50%, -50%) scale(1);
    opacity: 1
  }
  100% {
    -webkit-transform: translate(-50%, -50%) scale(1.6);
    transform: translate(-50%, -50%) scale(1.6);
    opacity: 0
  }
}
